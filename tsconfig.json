{
  "compilerOptions": {
    "target": "ESNext",

    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",

    "skipLibCheck": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,

    "noEmit": true,

    "strict": true,
    "noImplicitAny": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@mdzlang/lsp-core": ["./packages/lsp-core/src/index.ts"],
      "@mdzlang/lsp-server": ["./packages/lsp-server/src/index.ts"],
    },
  },
}
