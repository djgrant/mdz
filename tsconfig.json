{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "packages/core/src/typecheck/typecheck.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "poc",
    "packages/observability",
    "tests/observability.test.ts"
  ]
}
